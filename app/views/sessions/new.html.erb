<div class='row'>
	<div class='large-12 small-12 columns'>
<%= form_for(User.new, method: :post, url: sessions_path) do |f| %>
  <label>
    Email
    <%= f.text_field :email, placeholder: 'Email address' %>
  </label>
  <label>
    Password
    <%= f.password_field :password, placeholder: 'Password' %>
  </label>
  <%= button_tag 'Log in', class: 'button', type: 'submit' %>
<% end %>
</div><!--12-->
</div><!--row-->
